{
  "name": "@viewar/components",
  "version": "1.10.1",
  "description": "ViewAR's reusable react components",
  "main": "./index.js",
  "scripts": {
    "clean": "rimraf ./build && rimraf ./dist",
    "start": "cross-env DEBUG=true webpack-dev-server --open --mode development --env development_core",
    "start:mock": "cross-env DEBUG=true webpack-dev-server --open --mode development --env development_mock",
    "build:webpack": "npm run clean && webpack -p --mode production --env production",
    "build:package": "npm run clean && bash build_package.sh",
    "test": "npm run test:integration && npm run test:unit",
    "test:integration": "npm run lint && npm run build:webpack && npm run karma",
    "test:unit": "npm run clean && jest __tests__",
    "karma": "karma start ./node_modules/@viewar/webpack/karma",
    "lint": "prettier **/*.{scss,md,json} --write",
    "_lint": "prettier **/*.{scss,md,json} --write && eslint --fix \"**/*.*{js,jsx}\" --ignore-pattern \"build/**/*\" --format pretty"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "files": [
    "index.js",
    "dist/**/*",
    "dist/assets/*",
    "src/index.js",
    "src/components/**/*",
    "src/sass/**/*"
  ],
  "directories": {
    "lib": "dist"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "viewar",
    "react",
    "components",
    "shared"
  ],
  "engines": {
    "node": ">=10.13.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "commonjs",
          "targets": {
            "node": "current",
            "esmodules": true,
            "browsers": [
              "> 1%",
              "last 2 versions",
              "not ie <= 8"
            ]
          }
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-export-default-from",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties"
      ],
      "@babel/plugin-transform-react-constant-elements",
      [
        "transform-inline-environment-variables"
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viewar/components.git"
  },
  "author": "Stefan Friedl <sf@viewar.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/viewar/components/issues"
  },
  "homepage": "https://github.com/viewar/components#readme",
  "dependencies": {
    "classnames": "^2.2.6",
    "glob": "^7.1.6",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "react-hot-loader": "4.12.18",
    "react-router-dom": "^5.2.0",
    "url-loader": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.7",
    "@babel/core": "^7.12.7",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/plugin-proposal-export-default-from": "^7.12.1",
    "@babel/plugin-proposal-export-namespace-from": "^7.12.1",
    "@babel/plugin-transform-react-constant-elements": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/register": "^7.12.1",
    "@viewar/api": "^1.19.0",
    "@viewar/config-eslint": "^1.12.0",
    "@viewar/webpack": "^1.14.1",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "karma": "^4.4.1",
    "lodash": "^4.17.20",
    "puppeteer": "^2.1.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.2",
    "viewar-core": "^11.91.4"
  },
  "peerDependencies": {
    "@viewar/webpack": "^1.14.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "@viewar/api": "^1.19.0",
    "viewar-core": "^11.62.4"
  }
}
